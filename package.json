{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "add-skills-from-blueprint": "./support/sync-skills-with-blueprint.sh",
    "add-skills": "./support/add-skill.sh",
    "sync": "yarn && node ./support/sync.js",
    "boot.skills": "lerna run boot",
    "build.skills": "lerna run build.dev",
    "clean.skills": "lerna clean",
    "delete.skills": "find ./packages -type d -mindepth 1 -maxdepth 1 -exec rm -rf {} +",
    "clean": "rm -rf node_modules/ package-lock.json yarn.lock",
    "rebuild": "yarn reset && yarn sync",
    "reset": "yarn clean && yarn delete.skills",
    "update": "git pull && yarn && ./support/update.sh"
  },
  "devDependencies": {
    "js-yaml": "^4.1.0",
    "lerna": "^7.3.0"
  }
}