{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "add-repos-from-blueprint": "./support/sync-repos-with-blueprint.sh",
    "add-repo": "./support/add-repo.sh",
    "sync": "yarn add-repos-from-blueprint && yarn --force && yarn build",
    "build": "lerna run build",
    "clean": "lerna clean",
    "reset": "find ./packages -type d -mindepth 1 -maxdepth 1 -exec rm -rf {} +"
  },
  "devDependencies": {
    "js-yaml": "^4.1.0",
    "lerna": "^7.3.0"
  }
}